<%- include(viewDir + "/common/header.ejs") %>

<main>
    <section class="section section--author">
        <% if (message) { %>
            <span>
            <%= message %>
        </span>
        <% } %>
        <form class="form form--shelf"
        <% if (data) { %>
              data-url="/shelf/<%= data.id %>/edit"
        <% } else { %>
              data-url="/shelf/add"
                <% } %>
        >
            <h1><%= data ? "Edytuj" : "Dodaj" %> półkę</h1>
            <div class="container shelf shelf--full">
                <div class="shelf__info">
                    <div class="field field--text">
                        <label class="field__label">
                            <span class="field__label__text visually-hidden">Nazwa</span>
                            <input class="field__label__input"
                                   placeholder="Nazwa"
                                   name="name"
                                   type="text"
                                   data-validate="required length"
                                   value="<%= data ? data.name : "" %>"
                            >
                        </label>
                    </div>
                </div>
                <div class="field field--submit">
                    <input class="field__input button"
                           type="submit"
                           value="Zapisz"
                    >
                </div>
            </div>
        </form>
    </section>
</main>

<%- include(viewDir + "/common/footer.ejs") %>

