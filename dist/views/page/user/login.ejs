<%- include(viewDir + "/common/header.ejs") %>

<main>
  <section class="container section section--login">
    <form class="form form--login" action="userAdminView.html">
      <h1 class="form__header">
        Zaloguj się
      </h1>
      <div class="field field--text">
        <label class="field__label">
          <span class="field__label__text visually-hidden">Login</span>
          <input class="field__label__input"
                 placeholder="Login"
                 name="login"
                 type="text"
          >
        </label>
      </div>
      <div class="field field--password">
        <label class="field__label">
          <span class="field__label__text visually-hidden">Hasło</span>
          <input class="field__label__input"
                 placeholder="Hasło"
                 name="password"
                 type="password"
          >
        </label>
      </div>
      <div class="field field--submit">
        <input class="field__input button" type="submit" value="Zaloguj">
      </div>
    </form>
  </section>
</main>

<%- include(viewDir + "/common/footer.ejs") %>

